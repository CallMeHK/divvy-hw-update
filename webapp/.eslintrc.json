{
  "rules": {},
  "env": {
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "plugins": [
    "react"
  ],
  "overrides": [
    {
      "files": [ "webpack.config.js", "babel.config.js", "jest.config.js", "testSetup.js" ],
      "env": {
        "node": true
      }
    }
  ]
}
